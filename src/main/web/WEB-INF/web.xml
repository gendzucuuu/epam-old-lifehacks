<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <session-config>
        <session-timeout>10</session-timeout>
    </session-config>

    <error-page>
        <error-code>404</error-code>
        <location>/pages/error/error404Page.jsp</location>
    </error-page>

    <error-page>
        <error-code>403</error-code>
        <location>/pages/error/error403Page.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/pages/error/error500Page.jsp</location>
    </error-page>


    <filter>
        <filter-name>usersecurityfilter</filter-name>
        <filter-class>by.epam.java.training.lifehacks.weblayer.filter.UserSecurityFilter</filter-class>
        <init-param>
            <param-name>index</param-name>
            <param-value>authorization.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>usersecurityfilter</filter-name>
        <url-pattern>/pages/user/</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>adminsecurityfilter</filter-name>
        <filter-class>by.epam.java.training.lifehacks.weblayer.filter.AdminSecurityFilter</filter-class>
        <init-param>
            <param-name>index</param-name>
            <param-value>start.jsp</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>adminsecurityfilter</filter-name>
        <url-pattern>/pages/admin/</url-pattern>
    </filter-mapping>
